<div class="container">
  <h1>User Account</h1>

  <% if session[:name] == nil %>
  <form action="/users/login" method="post">
    Email: <input type="text" name="user[email]" size="30"></input><br>
    Password: <input type="password" name="user[password]" size="30"></input><br>
    <input type="submit" value="Login"></input>
  </form>
  <% else %>
    <%= "Welcome #{session[:name]}" if session[:name]%><br><br>
    <a href="/users/<%=session[:id]%>"> View Profile</a>
    <a href="/users/<%=session[:id]%>/edit"> Edit Profile</a>
    <a href="/users/<%=session[:id]%>/delete"> Delete Profile</a><br><br>
    <a href="/users/logout"> Logout </a>
  <% end %>
</div>

<div class="container">
  <h1> Sign Up</h1>
  <p> Fill in the details</p>
  <form action="/users" method="post">
    Name: <input type="text" name="user[name]" size="30"></input><br>
    Email: <input type="text" name="user[email]" size="30"></input><br>
    Password: <input type="password" name="user[password]" size="30"></input><br>
    <input type="submit" value="Sign Up"></input>
  </form>
</div>

